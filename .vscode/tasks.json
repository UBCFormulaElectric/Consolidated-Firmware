            "label": "Load CMake: Embedded",
            "type": "shell",
            "command": "mkdir -p build_fw_deploy && cmake -S . -B build_fw_deploy -DPLATFORM=firmware -DTARGET=deploy",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
