        {
            "label": "Build: All Embedded Binaries",
            "type": "shell",
            "command": "make -j`nproc`",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/build_arm"
            }
        },
        {
            "label": "Build: All Tests",
