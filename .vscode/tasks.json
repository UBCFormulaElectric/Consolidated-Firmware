{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Load CMake: Embedded",
            "type": "shell",
            "command": "mkdir -p build_arm && cmake -S . -B build_arm -DPLATFORM=arm",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "Load CMake: Tests",
            "type": "shell",
            "command": "mkdir -p build_x86 && cmake -S . -B build_x86 -DPLATFORM=x86",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "label": "Clean CMake: Embedded",
            "type": "shell",
            "command": "cmake --build . --target clean",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/build_arm"
            },
        },
        {
            "label": "Clean CMake: Tests",
            "type": "shell",
            "command": "cmake --build . --target clean",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/build_x86"
            },
        },
        {
            "label": "Build: BMS.elf",
            "type": "shell",
            "command": "make -j`nproc` BMS.elf",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/build_arm"
            }
        },
        {
