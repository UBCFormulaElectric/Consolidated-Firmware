    {
      "fileMatch": ["/can_bus/json/**/*tx.json"],
      "url": "/can_bus/json/schema_tx.json"
    }
  ],
  "cmake.configureOnEdit": false,
  "cmake.configureOnOpen": false,
  "clangd.arguments": [
    "--compile-commands-dir=build_fw_dev",
