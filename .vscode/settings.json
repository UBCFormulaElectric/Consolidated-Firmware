{
  "json.schemas": [
    {
      "fileMatch": ["/can_bus/json/**/*tx.json"],
      "url": "/can_bus/json/schema_tx.json"
    }
  ],
  "cmake.configureOnEdit": false,
  "cmake.configureOnOpen": false,
  "clangd.arguments": [
    "--compile-commands-dir=build_fw_dev",
    // "--compile-commands-dir=build_fw_test",
    "--query-driver=/usr/local/bin/arm-none-eabi-gcc"
  ],
  "files.associations": {
    "*.c": "c",
    "*.html": "html",
    "*.sqlbook": "sql",
    "*.ndjson": "jsonl",
    "*.dbclient-js": "javascript",
    "io_jsoncan.h": "c",
    "io_telemmessage.h": "c",
    "chrono": "c",
    "io_canrx.h": "c",
    "io_telembasetime.h": "c",
    "io_canmsg.h": "c",
    "app_units.h": "c"
  }
}
