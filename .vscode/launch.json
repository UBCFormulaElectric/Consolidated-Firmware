{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Embedded: VC (Quadruna)",
      "cwd": "${workspaceRoot}",
      "executable": "build_fw_deploy/firmware/quadruna/VC/quadruna_VC.hex",
      "symbolFiles": [
        // This order matters, or RTT won't work! (app has to be last)
        "build_fw_deploy/firmware/quadruna/VC/quadruna_VC_boot.elf",
        "build_fw_deploy/firmware/quadruna/VC/quadruna_VC_app.elf",
      ],
      "request": "launch",
      "type": "cortex-debug",
      "servertype": "openocd",
      "configFiles": [
        "tools/openocd/stm32h7x.cfg"
      ],
      "showDevDebugOutput": "none",
      "preLaunchTask": "Build Embedded: VC (Quadruna)",
      "rttConfig": {
        "enabled": true,
        "address": "auto",
        "clearSearch": false, // Required for OpenOCD
        "decoders": [
          {
            "label": "Debug logs: VC",
            "port": 0,
            "type": "console"
          }
        ]
      }
    },
